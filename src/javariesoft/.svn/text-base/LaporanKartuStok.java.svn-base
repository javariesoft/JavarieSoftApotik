private void txtBarangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_txtBarangActionPerformed
        try {
            // TODO add your handling code here:
                JDBCAdapter j = new JDBCAdapter(koneksi.getKoneksiJ());
                String sql="select KODEBARANG,NAMABARANG FROM BARANG where KODEBARANG like '"+txtBarang.getText()+"%' or lower(namabarang) like '"+txtBarang.getText().toLowerCase()+"%'";
                j.executeQuery(sql);
                jScrollPane2.getViewport().remove(jTable2);
                jTable2=new JTable(j);
                jScrollPane2.getViewport().add(jTable2);
                jScrollPane2.repaint();
                
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(LaporanKartuStok.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(LaporanKartuStok.class.getName()).log(Level.SEVERE, null, ex);
        }
    
}//GEN-LAST:event_txtBarangActionPerformed

