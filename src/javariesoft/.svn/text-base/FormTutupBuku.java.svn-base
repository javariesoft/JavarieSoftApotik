private void cboTutupBukuActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_cboTutupBukuActionPerformed
    try {
        if (!saldoperiodeDao.cekPeriode(c, txtTahun.getText() + "." + (cboBulan.getSelectedIndex() + 1))) {
            // TODO add your handling code here:
            double saldo = 0;
            double saldoawal = 0, debet = 0, kredit = 0;
            Statement stat1 = c.createStatement();
            ResultSet rs1 = stat1.executeQuery("select * from PERKIRAAN where TIPE='D' OR TIPE='SD' order by KODEPERKIRAAN ");
            saldoperiode s = new saldoperiode();
            while (rs1.next()) {
                s.setPERIODE(txtTahun.getText() + "." + (cboBulan.getSelectedIndex() + 1));
                s.setKODEAKUN(rs1.getString(1));
                s.setGRUP(rs1.getInt(3));
                
                saldoawal = saldoperiodeDao.getSaldo(c, s.getKODEAKUN(), cboBulan.getSelectedIndex() == 0 ? 12 : cboBulan.getSelectedIndex(), cboBulan.getSelectedIndex() == 0 ? (Integer.parseInt(txtTahun.getText()) - 1) : (Integer.parseInt(txtTahun.getText())));
                debet = saldoperiodeDao.getDebet(c, s.getKODEAKUN(), cboBulan.getSelectedIndex() + 1, Integer.parseInt(txtTahun.getText()));
                kredit = saldoperiodeDao.getKredit(c, s.getKODEAKUN(), cboBulan.getSelectedIndex() + 1, Integer.parseInt(txtTahun.getText()));
                if (rs1.getInt(3) == 1) {
                    saldo = saldoawal + debet - kredit;
                }
                if (rs1.getInt(3) == 2) {
                    saldo = saldoawal - debet + kredit;
                }
                if (rs1.getInt(3) == 3) {
                    saldo = saldoawal - debet + kredit;
                }
                if (rs1.getInt(3) == 4) {
                    saldo = saldoawal - debet + kredit;
                }
                if (rs1.getInt(3) == 5) {
                    saldo = saldoawal + debet - kredit;
                }
                if (rs1.getInt(3) == 6) {
                    saldo = saldoawal + debet - kredit;
                }
                if(settingDao.getAkun(c, "PIUTANG").equals(s.getKODEAKUN()) || settingDao.getAkun(c, "HUTANG").equals(s.getKODEAKUN())){
                    s.setSALDO(0);
                }else{
                    s.setSALDO(saldo);
                }                
                saldoperiodeDao.insertIntoSALDOPERIODE(c, s);
            }
        }
        reloadData();
    } catch (SQLException ex) {
        Logger.getLogger(FormTutupBuku.class.getName()).log(Level.SEVERE, null, ex);
    }
}//GEN-LAST:event_cboTutupBukuActionPerformed

