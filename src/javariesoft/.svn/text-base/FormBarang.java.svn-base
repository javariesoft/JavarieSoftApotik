    public void reloadAkun() {
        try {
            PreparedStatement ps = c.prepareStatement("select * from PERKIRAAN where TIPE='D' and GRUP=1", ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_READ_ONLY);
            ResultSet rs = ps.executeQuery();
            rs.last();
            if (rs.getRow() > 0) {
                persediaan = new String[rs.getRow()];
                rs.beforeFirst();
                int c = 0;
                jComboBox1.removeAllItems();
                while (rs.next()) {
                    jComboBox1.addItem(rs.getString(1)+"-"+rs.getString(2));
                    persediaan[c] = rs.getString(1);
                    c++;
                }
            }
            cboPendapatan.removeAllItems();
            ps = c.prepareStatement("select * from PERKIRAAN where TIPE='D' and GRUP=4", ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_READ_ONLY);
            rs = ps.executeQuery();
            rs.last();
            if (rs.getRow() > 0) {
                pendapatan = new String[rs.getRow()];
                rs.beforeFirst();
                int c = 0;
                while (rs.next()) {
                    cboPendapatan.addItem(rs.getString(1)+"-"+rs.getString(2));
                    pendapatan[c] = rs.getString(1);
                    c++;
                }
            }
            jComboBox2.removeAllItems();
            ps = c.prepareStatement("select * from PERKIRAAN where TIPE='D' and GRUP=5", ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_READ_ONLY);
            rs = ps.executeQuery();
            rs.last();
            if (rs.getRow() > 0) {
                HPP = new String[rs.getRow()];
                rs.beforeFirst();
                int c = 0;
                while (rs.next()) {
                    jComboBox2.addItem(rs.getString(1)+"-"+rs.getString(2));
                    HPP[c] = rs.getString(1);
                    c++;
                }
            }
            cboJenisbarang.removeAllItems();
            ps = c.prepareStatement("select * from JENISBARANG", ResultSet.TYPE_SCROLL_SENSITIVE, ResultSet.CONCUR_READ_ONLY);
            rs = ps.executeQuery();
            rs.last();
            if (rs.getRow() > 0) {
                kodeJenis = new String[rs.getRow()];
                rs.beforeFirst();
                int c = 0;
                while (rs.next()) {
                    cboJenisbarang.addItem(rs.getString(1)+"-"+rs.getString(2));
                    kodeJenis[c] = rs.getString(1);
                    c++;
                }
            }
            
        } catch (Exception ex) {
            Logger.getLogger(FormBarang.class.getName()).log(Level.SEVERE, null, ex);
        }

    }

    public void reloadData() {
        try {
            JDBCAdapter j = new JDBCAdapter(c);
            String sql = "select KODEBARANG,NAMABARANG,HARGA,STOK,KODEAKUN as `AKUN PERSEDIAAN` from BARANG where 1=1 ";
            if (jComboBox3.getSelectedIndex() == 0) {
                sql += " AND KODEBARANG like '" + jTextField7.getText() + "%'";
            }
            if (jComboBox3.getSelectedIndex() == 1) {
                sql += " AND NAMABARANG like '" + jTextField7.getText() + "%'";
            }
            sql+=" ORDER BY KODEBARANG";
            j.executeQuery(sql);
            jScrollPane1.getViewport().remove(jTable1);
            jTable1 = new JTable(j);
            jTable1.addMouseListener(new java.awt.event.MouseAdapter() {

                public void mouseClicked(java.awt.event.MouseEvent evt) {
                    jTable1MouseClicked(evt);
                }
            });
            jScrollPane1.getViewport().add(jTable1);
            jScrollPane1.repaint();
        } catch (Exception ex) {
            Logger.getLogger(FormBarang.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

