private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTable1MouseClicked
    try {
        // TODO add your handling code here:
        b = dbBarang.getDetails(jTable1.getValueAt(jTable1.getSelectedRow(), 0).toString());
        jTextField1.setText(b.getKODEBARANG());
        jTextField2.setText(b.getNAMABARANG());
        jTextField3.setText(b.getSATUAN());
        jTextField4.setText("" + b.getHARGA());
        perkiraan p = new perkiraan();
        String[] kode=com.erv.function.Util.split(b.getKODEAKUN(), ".");
        supplier s=new supplier();
        supplierDao dbs=new supplierDao();
        s=dbs.getDetails(c, b.getIDSUPPLIER());
        idsupplier.setText(s.getIDSUPPLIER());
        namasupplier.setText(s.getNAMA());
        p = dbperk.getDetails(kode[0]);
        jComboBox1.setSelectedItem(p.getKODEPERKIRAAN()+"-"+p.getNAMAPERKIRAAN());
        p = dbperk.getDetails(b.getCOGS_ACC());
        jComboBox2.setSelectedItem(p.getKODEPERKIRAAN()+"-"+p.getNAMAPERKIRAAN());
        p = dbperk.getDetails(b.getPENDAPATAN_ACC());
        cboPendapatan.setSelectedItem(p.getKODEPERKIRAAN()+"-"+p.getNAMAPERKIRAAN());
        jTextField5.setText("" + b.getCOGS());
        jTextField6.setText("" + b.getSTOK());
        p = null;

    } catch (SQLException ex) {
        Logger.getLogger(FormBarang.class.getName()).log(Level.SEVERE, null, ex);
    } catch (ClassNotFoundException ex) {
        Logger.getLogger(FormBarang.class.getName()).log(Level.SEVERE, null, ex);
    }
}//GEN-LAST:event_jTable1MouseClicked

