    void isiCombo(){
        try {
            cboAkun.removeAllItems();
            Statement stat=koneksi.getKoneksiJ().createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,ResultSet.CONCUR_READ_ONLY);
            ResultSet rs=stat.executeQuery("Select * from PERKIRAAN where TIPE='D' or TIPE='SD'"); 
            int jum=0;
            rs.last();
            if(rs.getRow()>0) jum=rs.getRow();
            if(jum>0){
                rs.beforeFirst();
                akun=new String[jum];
                jum=0;
                while(rs.next()){
                    akun[jum]=rs.getString(1);
                    cboAkun.addItem(rs.getString(1)+"-"+rs.getString(2));
                    jum++;
                }
            }
        } catch (Exception ex) {
            Logger.getLogger(LaporanBukuBesarDetailForm.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }
